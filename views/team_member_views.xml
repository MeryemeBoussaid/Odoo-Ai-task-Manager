<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <record id="view_team_member_form" model="ir.ui.view">
        <field name="name">task.manager.team.member.form</field>
        <field name="model">task.manager.team.member</field>
        <field name="arch" type="xml">
            <form string="Membre d'équipe">
                <sheet>
                    <field name="avatar" widget="image" class="oe_avatar"/>
                    <group>
                        <field name="name"/>
                        <field name="email"/>
                        <field name="phone"/>
                        <field name="role"/>
                        <field name="joining_date"/>
                        <field name="user_id"/>
                        <field name="active"/>
                    </group>
                    <group string="Statistiques">
                        <field name="task_count"/>
                        <field name="task_new_count"/>
                        <field name="task_in_progress_count"/>
                        <field name="task_done_count"/>
                        <field name="completion_rate" widget="progressbar"/>
                    </group>
                    <notebook>
                        <page string="Tâches">
                            <field name="task_ids">
                                <list>
                                    <field name="name"/>
                                    <field name="state"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>
    
    <record id="view_team_member_tree" model="ir.ui.view">
        <field name="name">task.manager.team.member.tree</field>
        <field name="model">task.manager.team.member</field>
        <field name="arch" type="xml">
            <list string="Membres">
                <field name="name"/>
                <field name="email"/>
                <field name="role"/>
                <field name="task_count"/>
                <field name="completion_rate" widget="progressbar"/>
            </list>
        </field>
    </record>
    
    <!-- VUE KANBAN -->
    <record id="view_team_member_kanban" model="ir.ui.view">
        <field name="name">task.manager.team.member.kanban</field>
        <field name="model">task.manager.team.member</field>
        <field name="arch" type="xml">
            <kanban>
                <field name="name"/>
                <field name="email"/>
                <field name="role"/>
                <field name="avatar"/>
                <field name="task_count"/>
                <field name="completion_rate"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <div class="oe_kanban_content">
                                <div class="o_kanban_record_top mb-2">
                                    <img t-att-src="kanban_image('task.manager.team.member', 'avatar', record.id.raw_value)" 
                                         class="oe_kanban_avatar" alt="Avatar"/>
                                </div>
                                <div class="o_kanban_record_headings">
                                    <strong class="o_kanban_record_title">
                                        <field name="name"/>
                                    </strong>
                                    <div class="o_kanban_record_subtitle">
                                        <field name="role"/>
                                    </div>
                                </div>
                                <div class="o_kanban_record_body">
                                    <field name="email"/>
                                </div>
                                <div class="o_kanban_record_bottom mt-2">
                                    <div class="oe_kanban_bottom_left">
                                        <span>Tâches: <field name="task_count"/></span>
                                    </div>
                                    <div class="oe_kanban_bottom_right">
                                        <field name="completion_rate" widget="progressbar"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>
    
    <record id="action_team_member" model="ir.actions.act_window">
        <field name="name">Membres d'équipe</field>
        <field name="res_model">task.manager.team.member</field>
        <field name="view_mode">kanban,tree,form</field>
    </record>
    
</odoo>
