<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <!-- VUE FORM -->
    <record id="view_task_manager_task_form" model="ir.ui.view">
        <field name="name">task.manager.task.form</field>
        <field name="model">task.manager.task</field>
        <field name="arch" type="xml">
            <form string="Tâche">
                <header>
                    <button name="action_start_task" string="Démarrer" type="object" 
                            invisible="state != 'new'"/>
                    <button name="action_complete_task" string="Terminer" type="object" 
                            invisible="state != 'in_progress'"/>
                    <button name="action_reset_task" string="Réinitialiser" type="object" 
                            invisible="state != 'done'"/>
                    <field name="state" widget="statusbar" statusbar_visible="new,in_progress,done"/>
                </header>
                <sheet>
                    <field name="is_overdue" invisible="1"/>
                    <group>
                        <field name="name"/>
                        <field name="priority"/>
                        <field name="state"/>
                        <field name="user_id"/>
                        <field name="team_member_id"/>
                        <field name="deadline"/>
                        <field name="estimated_hours"/>
                        <field name="description"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    
    <!-- VUE TREE (list in XML) -->
    <record id="view_task_manager_task_tree" model="ir.ui.view">
        <field name="name">task.manager.task.tree</field>
        <field name="model">task.manager.task</field>
        <field name="arch" type="xml">
            <list string="Tâches">
                <field name="name"/>
                <field name="priority"/>
                <field name="deadline"/>
                <field name="state"/>
            </list>
        </field>
    </record>
    
    <!-- VUE KANBAN -->
    <record id="view_task_manager_task_kanban" model="ir.ui.view">
        <field name="name">task.manager.task.kanban</field>
        <field name="model">task.manager.task</field>
        <field name="arch" type="xml">
            <kanban default_group_by="state" class="o_kanban_small_column">
                <field name="name"/>
                <field name="priority"/>
                <field name="state"/>
                <field name="deadline"/>
                <field name="user_id"/>
                <field name="is_overdue"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <div class="oe_kanban_content">
                                <div class="o_kanban_record_top">
                                    <div class="o_kanban_record_headings">
                                        <strong class="o_kanban_record_title">
                                            <field name="name"/>
                                        </strong>
                                    </div>
                                    <div class="o_kanban_record_top_right">
                                        <field name="priority" widget="priority"/>
                                    </div>
                                </div>
                                <div class="o_kanban_record_body">
                                    <field name="user_id" widget="many2one_avatar_user"/>
                                </div>
                                <div class="o_kanban_record_bottom">
                                    <div class="oe_kanban_bottom_left">
                                        <field name="deadline" widget="date"/>
                                        <t t-if="record.is_overdue.raw_value">
                                            <span class="badge badge-danger">En retard</span>
                                        </t>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>
    
    <!-- ACTION WINDOW -->
    <record id="action_task_manager_task" model="ir.actions.act_window">
        <field name="name">Tâches</field>
        <field name="res_model">task.manager.task</field>
        <field name="view_mode">list,form</field>
    </record>

</odoo>